
@page "/polimorfismo"
@using EjemploIntermedios.Components.Clases

<h1 class="text-center mt-4">Polimorfismo</h1>

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary w-100" @onclick="MostrarMensajes">Mostrar Mensajes</button>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <p role="status" class="alert alert-info text-center">@MensajePerro</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <p role="status" class="alert alert-info text-center">@MensajeGato</p>
        </div>
    </div>
</div>

@code {

    private string MensajePerro = "";
    private string MensajeGato = "";

    private void MostrarMensajes()
    {
        Animales perro = new Perros();
        Animales gato = new Gatos();

        MensajePerro += perro.HacerSonido();
      
        MensajeGato += gato.HacerSonido();
    }
}
